<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arpo.mychallenge.CreateAvatar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Create avartar for your Game proifile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/textView5"
            android:layout_marginTop="103dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_update_avatar_info"
            android:layout_toStartOf="@+id/btn_update_avatar_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:id="@+id/textView6"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Avatar Image"
            android:id="@+id/textView7"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/editAge"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE AVATAR INFO"
            android:id="@+id/btn_update_avatar_info"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp" />

        <EditText
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/editName"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignRight="@+id/btn_update_avatar_info"
            android:layout_alignEnd="@+id/btn_update_avatar_info" />

        <EditText
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/editAge"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/editName"
            android:layout_alignStart="@+id/editName" />

    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->


</FrameLayout>
